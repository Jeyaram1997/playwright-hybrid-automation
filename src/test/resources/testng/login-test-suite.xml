<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!--
M2P Fintech Workflow Admin Portal - Login Test Suite
Framework: Playwright Java + Cucumber + TestNG
Author: Jeyaram K
Version: 1.0.0
Date: 2025-01-01
-->

<suite name="M2P_Fintech_Login_Test_Suite" verbose="2" parallel="false" thread-count="1" 
       data-provider-thread-count="1" preserve-order="true">

    <parameter name="BROWSER" value="chromium"/>
    <parameter name="HEADED" value="true"/>
    <parameter name="ENVIRONMENT" value="uat"/>
    <parameter name="APP_BASE_URL" value="https://uat-workflow.m2pfintech.dev/admin/"/>
    <parameter name="TIMEOUT" value="30000"/>
    <parameter name="SCREENSHOT_ON_FAILURE" value="true"/>
    <parameter name="PARALLEL_EXECUTION" value="false"/>

    <listeners>
        <listener class-name="com.jeyaram.automation.listeners.TestNGListener"/>
        <listener class-name="com.jeyaram.automation.listeners.AllureTestNGListener"/>
        <listener class-name="com.jeyaram.automation.listeners.ExtentTestNGListener"/>
        <listener class-name="com.jeyaram.automation.listeners.EmailNotificationListener"/>
    </listeners>

    <!-- Login Smoke Tests - Critical functionality -->
    <test name="Login_Smoke_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @smoke"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Positive Tests - Valid scenarios -->
    <test name="Login_Positive_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @positive"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Negative Tests - Invalid scenarios -->
    <test name="Login_Negative_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @negative"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login UI Tests - Interface validation -->
    <test name="Login_UI_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @ui"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Security Tests - Security validation -->
    <test name="Login_Security_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @security"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Functionality Tests - Feature validation -->
    <test name="Login_Functionality_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @functionality"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Accessibility Tests - Accessibility validation -->
    <test name="Login_Accessibility_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @accessibility"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Performance Tests - Performance validation -->
    <test name="Login_Performance_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @performance"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Responsive Tests - Responsive design validation -->
    <test name="Login_Responsive_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @responsive"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Session Tests - Session management validation -->
    <test name="Login_Session_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @session"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

    <!-- Login Logout Tests - Logout functionality validation -->
    <test name="Login_Logout_Tests" enabled="true" preserve-order="true">
        <parameter name="cucumber.filter.tags" value="@login and @logout"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner"/>
        </classes>
    </test>

</suite>
