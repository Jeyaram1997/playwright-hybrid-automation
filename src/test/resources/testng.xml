<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    TestNG Configuration for Cucumber-TestNG Hybrid Framework
    Author: Jeyaram K
    
    Features:
    - Parallel execution support
    - Multiple browser testing
    - Cross-environment testing
    - Comprehensive reporting
    - Email notifications
    - Jira integration
-->

<suite name="Playwright-Cucumber-TestNG-Suite" verbose="1" parallel="methods" thread-count="3" 
       data-provider-thread-count="3" time-out="300000">
    
    <!-- Suite-level parameters -->
    <parameter name="browser" value="chromium"/>
    <parameter name="environment" value="development"/>
    <parameter name="headless" value="false"/>
    
    <!-- Listeners for enhanced reporting and notifications -->
    <listeners>
        <listener class-name="com.jeyaram.automation.listeners.TestNGListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <!-- Smoke Test Suite - Quick validation -->
    <test name="Smoke-Tests" preserve-order="true" parallel="false">
        <parameter name="tags" value="@smoke"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Regression Test Suite - Comprehensive testing -->
    <test name="Regression-Tests" preserve-order="false" parallel="methods" thread-count="2">
        <parameter name="tags" value="@regression"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- API Test Suite - API validation -->
    <test name="API-Tests" preserve-order="false" parallel="methods" thread-count="3">
        <parameter name="tags" value="@api"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- UI Test Suite - User interface testing -->
    <test name="UI-Tests" preserve-order="true" parallel="false">
        <parameter name="tags" value="@ui"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Mobile Test Suite - Mobile app testing -->
    <test name="Mobile-Tests" preserve-order="true" parallel="false">
        <parameter name="tags" value="@mobile"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Performance Test Suite - Load and performance testing -->
    <test name="Performance-Tests" preserve-order="true" parallel="false">
        <parameter name="tags" value="@performance"/>
        <classes>
            <class name="com.jeyaram.automation.runners.CucumberTestNGRunner">
                <methods>
                    <include name="scenarios"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
