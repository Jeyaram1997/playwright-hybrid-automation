# Playwright Java Hybrid Automation Framework Environment Configuration
# Author: Jeyaram K

# Application Configuration
APP_BASE_URL=https://playwright.dev
API_BASE_URL=https://jsonplaceholder.typicode.com
APP_FORM_URL=https://the-internet.herokuapp.com/login

# Browser Configuration
BROWSER=chromium
HEADLESS=false
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
SLOW_MO=0
TIMEOUT=30000

# Environment Settings
ENVIRONMENT=development
TEST_DATA_PATH=test-data
SCREENSHOT_PATH=test-results/screenshots
REPORTS_OUTPUT_DIR=target/reports

# Parallel Execution
PARALLEL_TESTS=1
THREAD_COUNT=1

# JIRA Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=automation@your-company.com
JIRA_API_TOKEN=ATATT3xFfGF0xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
JIRA_PROJECT_KEY=TEST
JIRA_ISSUE_TYPE=Bug

# Email Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_TLS=true
EMAIL_USERNAME=automation@your-company.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=automation@your-company.com
EMAIL_RECIPIENTS=qa-team@your-company.com,dev-team@your-company.com

# Database Configuration (if needed)
DB_URL=jdbc:mysql://localhost:3306/testdb
DB_USERNAME=testuser
DB_PASSWORD_ENCRYPTED=encrypted_password_here

# AI Configuration
AI_PLAYWRIGHT_CODEGEN_ENABLED=true
AI_ELEMENT_LOCATOR_ENABLED=true
AI_DATA_GENERATION_ENABLED=true
AI_TEST_OPTIMIZATION_ENABLED=true
AI_TEST_ANALYTICS_ENABLED=true

# Mobile Testing Configuration
APPIUM_SERVER_URL=http://localhost:4723
ANDROID_APP_PATH=apps/android/app.apk
IOS_APP_PATH=apps/ios/app.ipa
ANDROID_DEVICE_NAME=emulator-5554
IOS_DEVICE_NAME=iPhone 14 Simulator

# Performance Testing
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_THRESHOLD_LOAD_TIME=3000
PERFORMANCE_THRESHOLD_API_RESPONSE=2000

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=target/logs/automation.log

# Retry Configuration
MAX_RETRY_COUNT=2
RETRY_ON_FAILURE=true

# Video Recording
VIDEO_RECORDING_ENABLED=false
VIDEO_SAVE_PATH=target/videos

# Tracing
TRACING_ENABLED=false
TRACE_SAVE_PATH=target/traces

# API Testing
API_TIMEOUT=30000
API_RETRY_COUNT=3

# File Upload/Download
UPLOAD_PATH=test-data/uploads
DOWNLOAD_PATH=target/downloads

# Proxy Configuration (if needed)
PROXY_ENABLED=false
PROXY_HOST=proxy.company.com
PROXY_PORT=8080
PROXY_USERNAME=
PROXY_PASSWORD=

# Cucumber-TestNG Configuration
CUCUMBER_EXECUTION_PARALLEL_ENABLED=true
CUCUMBER_THREAD_COUNT=3
CUCUMBER_DATA_PROVIDER_THREAD_COUNT=3
CUCUMBER_TIMEOUT=300000
CUCUMBER_TAGS=@smoke or @regression or @api or @ui or @mobile or @performance
CUCUMBER_PLUGIN_REPORTS=true
CUCUMBER_MONOCHROME=true
CUCUMBER_DRY_RUN=false

# TestNG Configuration
TESTNG_SUITE_NAME=Playwright-Cucumber-TestNG-Suite
TESTNG_PARALLEL_MODE=methods
TESTNG_PRESERVE_ORDER=false
TESTNG_VERBOSE_LEVEL=1

# Notifications Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
JIRA_BUG_CREATION_ENABLED=true
JIRA_BUG_CREATION_ON_FAILURE=true
SCREENSHOT_ON_FAILURE=true

# Reporting Configuration
ALLURE_RESULTS_DIR=target/allure-results
ALLURE_REPORT_DIR=target/allure-report
CUCUMBER_REPORTS_DIR=target/cucumber-reports
EXTENT_REPORTS_DIR=target/extent-reports
