{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run M2P Login Tests - Headed Mode",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"test",
				"-Dtest=CucumberTestNGRunner",
				"-Dcucumber.filter.tags=@login",
				"-DBROWSER=chromium",
				"-DHEADED=true",
				"-DENVIRONMENT=uat",
				"-DAPP_BASE_URL=https://uat-workflow.m2pfintech.dev/admin/",
				"-Demail.notifications.enabled=true",
				"-Djira.bug.creation.enabled=false"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			]
		}
	]
}